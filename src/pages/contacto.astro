    body {
        margin: 0px;
        padding: 0px;
        font-family: ubuntu;
        font-weight: 900;
        width: 100%;
        height: 170vh;
        background-image: url("../img/ALFA-bg.jpg");
        background-size: contain;
        background-repeat: repeat-y;
    }
    body::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 170vh;
        background-color: rgba(
            0,
            0,
            0,
            0.5
        ); /* Ajusta el color y la opacidad aquí */
        z-index: 1; /* Coloca la superposición sobre la imagen */
    }
    body > * {
        position: relative;
        z-index: 2; /* Asegura que el contenido esté encima de la superposición */
    }
    .header {
        z-index: 3;
    }

    .titulo {
        background-color: gold;
        padding: 1em;
        margin: auto;
        margin-top: 3em;
        text-align: center;
    }
    .caja {
        width: 75%;
        margin: auto;
        margin-top: 3em;
        height: auto;
        background-color: gold;
        padding: 1em;
        border-radius: 1em;
        text-align: center;
    }

    .tarjeta {
        background-image: url("../img/Alfa_Front.jpg");
        background-size: contain;
        background-repeat: no-repeat;
        background-position: center;
        background-color: rgb(0, 0, 0);
        /*margin-top: 3em;
        margin-bottom: 5em;*/
        margin-right: 3.5em;
        height: 300px;
        width: 180px;
        transition: 0.2s ease-in;
        cursor: crosshair;
    }
    .tarjeta:hover {
        transform: scale(1.5);
    }
    span {
        text-shadow: 2px 1px 2px rgb(35, 35, 35);
        padding: 0.5em;
        color: whitesmoke;
    }
    
    .flex{
    margin-top: 3em;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    align-content: center;
    flex-gap: 50px;
    }
    /*-- FORMULARIO --*/
    .contactito {
        text-align: center;
        /*position: relative;
        left: 25%;*/
        width: 90%;
        color: rgb(0, 6, 10);
        /*margin-top: 3em;*/
         font-size: 1.2em;
    }
    .contactito form nombre {
        background-color: whitesmoke;
        font-family: ubuntu;
    }

    .contactito form textarea,
    .contactito form input {
        font-family: ubuntu;
        font-size: 1em;
        font-weight: bold;
        color: #000000;
        width: 100%;
        /*background: none;*/
        border: none;
        margin-top: .3em;
        padding: .5em;
        border-bottom: 5px solid gold;
        border-radius: 1em;
        background-color: rgb(237, 237, 237);
    }

     .enviar {
      width: 100px;
        border-radius: 1em;
        margin: auto;
        margin-top: 2em;
        filter: sepia(100%);
    }
    @media (max-width:620px){
        .flex{
            margin: 2em;
        }
        .tarjeta{
           margin: auto;
           margin-top: 3em;
           background-color: black;
        }
        .contactito{
            margin: auto;
            margin-top: 5em;
            width: 100%;
        }
        body{
            height: 220vh;
        }
        body::before{
            height: 220vh;
        }
