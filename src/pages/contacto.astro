        body {
            margin: 0px;
            padding: 0px;
            font-family: ubuntu;
            font-weight: 900;
            width: 100%;
            height: 190vh;
            background-image: url("../img/ALFA-bg.jpg");
            background-size: contain;
            background-repeat: repeat-y;
        }
        body::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 190vh;
            background-color: rgba(
                0,
                0,
                0,
                0.5
            ); /* Ajusta el color y la opacidad aquí */
            z-index: 1; /* Coloca la superposición sobre la imagen */
        }
        body > * {
            position: relative;
            z-index: 2; /* Asegura que el contenido esté encima de la superposición */
        }
        .header {
            z-index: 3;
        }

        .titulo {
            background-color: gold;
            background-image: url("../img/background2.png");
            background-size: contain;
            background-position: center;
            padding: 1em;
            margin: auto;
            margin-top: 3em;
            text-align: center;
            font-size: 1.3em;
            box-shadow:
                7px 7px 0 rgb(225, 217, 217),
                0 8px 3px #232323a1;
        }
        .caja {
            width: 75%;
            margin: auto;
            margin-top: 3em;
            height: auto;
            background-color: gold;
            background-image: url("../img/background2.png");
            background-size: contain;
            background-position: center;
            padding: 1em;
            border-radius: 1em;
            text-align: center;
            box-shadow:
                7px 7px 0 rgb(225, 217, 217),
                0 8px 3px #0000004d;
        }

        .tarjeta {
            background-image: url("../img/AlfaCard.jpg");
            background-size: contain;
            background-repeat: no-repeat;
            background-position: center;
            background-color: rgb(0, 0, 0);
            /*margin-top: 3em;
        margin-bottom: 5em;*/
            margin-right: 3.5em;
            height: 300px;
            width: 180px;
            transition: 0.1s ease-in;
            cursor: none;
        }
        .tarjeta:hover {
            transform: scale(1.5);
        }
        span {
            text-shadow: 2px 1px 2px rgb(35, 35, 35);
            padding: 0.5em;
            color: whitesmoke;
        }
        .redestxt {
            display: block;
            padding: 1em;
            width: 90%;
            background-color: gold;
            background-image: url("../img/background2.png");
            background-size: contain;
            margin: auto;
            text-align: center;
            margin-top: 2em;
            border-radius: 1em;
            box-shadow:
                7px 7px 0 rgb(225, 217, 217),
                0 8px 3px #0000004d;
        }
        .redestxt h2 span {
            margin-bottom: 1.5em;
            font-size: 1.5em;
        }
        .redes {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            align-items: center;
            align-content: center;
            width: 100%;
            margin-top: 2em;
        }
        .socialfb {
            text-shadow: 2px 1px 2px rgb(35, 35, 35);
            padding: 0.5em;
            margin: 1em;
            border-radius: 1em;
            color: whitesmoke;
            background-color: gold;
            cursor: pointer;
            background-image: url("../img/background2.png");
            background-size: contain;
        }
        .socialinsta {
            text-shadow: 2px 1px 2px rgb(35, 35, 35);
            padding: 0.5em;
            margin: 1em;
            border-radius: 1em;
            color: whitesmoke;
            background-color: gold;
            cursor: pointer;
            background-image: url("../img/background2.png");
            background-size: contain;
        }
        .sociallink {
            text-shadow: 2px 1px 2px rgb(46, 46, 46);
            padding: 0.5em;
            margin: 1em;
            border-radius: 1em;
            color: whitesmoke;
            background-color: gold;
            cursor: pointer;
            background-image: url("../img/background2.png");
            background-size: contain;
        }
        .socialfb:hover {
            color: rgb(57, 57, 57);
            text-shadow: 2px 3px 5px rgb(40, 58, 255);
            transition: 0.25s all ease-in-out;
        }

        .socialinsta:hover {
            color: rgb(57, 57, 57);
            text-shadow: 2px 3px 5px rgb(217, 13, 249);
            transition: 0.25s all ease-in-out;
        }
        .sociallink:hover {
            color: rgb(57, 57, 57);
            text-shadow: 2px 3px 5px rgb(84, 147, 255);
            transition: 0.25s all ease-in-out;
        }

        .logofb {
            width: 110px;
            height: 110px;
            background-image: url("../img/redes/facebooklogo.png");
            background-size: contain;
            background-repeat: no-repeat;
            transition: 0.25s all cubic-bezier(0.25, 0.46, 0.45, 0.94);
        }
        .logofb:hover {
            transform: scale(1.2);
            cursor: pointer;
        }
        .logoinsta {
            width: 112px;
            height: 112px;
            background-image: url("../img/redes/instagramlogo.png");
            background-size: contain;
            background-repeat: no-repeat;
            transition: 0.25s all cubic-bezier(0.23, 1, 0.32, 1);
        }
        .logoinsta:hover {
            transform: scale(1.2);
            cursor: pointer;
        }
        .logolink {
            width: 115px;
            height: 115px;
            background-image: url("../img/redes/linkedinlogo.png");
            background-size: contain;
            background-repeat: no-repeat;
            transition: 0.25s all cubic-bezier(0.215, 0.61, 0.355, 1);
        }
        .logolink:hover {
            transform: scale(1.2);
            cursor: pointer;
        }

        .flex {
            margin-top: 3em;
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            align-items: center;
            align-content: center;
            flex-gap: 50px;
        }
        /*-- FORMULARIO --*/
        .contactito {
            text-align: center;
            /*position: relative;
        left: 25%;*/
            width: 90%;
            color: rgb(0, 6, 10);
            /*margin-top: 3em;*/
            font-size: 1.2em;
        }
        .contactito form nombre {
            background-color: whitesmoke;
            font-family: ubuntu;
        }

        .contactito form textarea,
        .contactito form input {
            font-family: ubuntu;
            font-size: 1em;
            font-weight: bold;
            color: #000000;
            width: 100%;
            /*background: none;*/
            border: none;
            margin-top: 0.3em;
            padding: 0.5em;
            border-bottom: 5px solid gold;
            border-radius: 1em;
            background-color: rgb(237, 237, 237);
            background-image: url("../img/background2.png");
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
        }

        .enviar {
            width: 100px;
            border-radius: 1em;
            margin: auto;
            margin-top: 2em;
            filter: sepia(100%);
        }
        @media (max-width: 620px) {
            .flex {
                margin: 2em;
            }
            .tarjeta {
                margin: auto;
                margin-top: 3em;
                background-color: black;
            }
            .contactito {
                margin: auto;
                margin-top: 5em;
                width: 100%;
            }
            body {
                height: 300vh;
            }
            body::before {
                height: 300vh;
            }
            .redestxt {
                width: 80%;
            }
            .logofb {
                width: 85px;
                height: 85px;
            }
            .logoinsta {
                width: 85px;
                height: 90px;
            }
            .logolink {
                width: 85px;
                height: 85px;
            }
            .socialfb {
                margin: 1.2em;
            }
            .socialinsta {
                margin: 1.2em;
            }
            .sociallink {
                margin: 1.2em;
            }
        }
